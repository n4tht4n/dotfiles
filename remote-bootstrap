#!/usr/bin/env bash

OS="$(uname)"
USERNAME="$USER"

echo -e "\nğŸš€ Executing remote-bootstrap... dotfiles.git â†’ ~/.dotfiles\n" && sleep 2

#######################################################################
### check for supported system
if [[ "$OS" != "Linux" && "$OS" != "Darwin" ]]; then
  echo "ğŸ’£ Didn't find a supported system! ($OS not in [Linux, Darwin])" && exit 1
elif [[ "$OS" == "Linux" ]]; then
  [ -f /etc/os-release ] && . /etc/os-release && OS=$ID
  if [[ "$OS" != "debian" && "$OS" != "ubuntu"]]; then
    echo "ğŸ’£ Didn't find a supported Linux! ($OS is not in [debian, ubuntu])" && exit 1
  fi
fi

if [[ "$OS" == "debian" || "$OS" == "ubuntu" ]]; then
  #######################################################################
  ### Linux: ensure mandatory tools
  INSTALLED_ANY_MANDATORY_TOOL=0

  # (do this 1st to have zsh as the default shell after relog ğŸ˜)
  type zsh &> /dev/null
  if [[ $? -ne 0 ]]; then
    echo "ğŸš§ Installing build essentials and 'zsh' and making it the default shell!" && sleep 2
    su root -c "export PATH=/usr/sbin:$PATH;apt -y install build-essential vim zsh;chsh -s /bin/zsh $USERNAME;exit 0"
    INSTALLED_ANY_MANDATORY_TOOL=1
  fi
  type curl &> /dev/null
  if [[ $? -ne 0 ]]; then
    echo "ğŸš§ Installing 'curl'!" && sleep 2
    su root -c "export PATH=/usr/sbin:$PATH;apt -y install curl;exit 0"
    INSTALLED_ANY_MANDATORY_TOOL=1
  fi

  # make sure some K8s cluster relevant stuff is installed
  su root -c "export PATH=/usr/sbin:$PATH;apt -y install nfs-common open-iscsi;exit 0"

  type sudo &> /dev/null
  if [[ $? -ne 0 ]]; then
    echo "ğŸš§ Installing missing 'sudo'!" && sleep 2
    su root -c "export PATH=/usr/sbin:$PATH;apt -y install sudo;usermod -aG sudo $USERNAME;exit 0"
    INSTALLED_ANY_MANDATORY_TOOL=1
  fi

  if [[ $INSTALLED_ANY_MANDATORY_TOOL -ne 0 ]]; then
    echo "ğŸ’£ Please relog the shell to finish mandatory tools setup! Then rerun this script again!" && exit 0
  fi
else
  #######################################################################
  ### macOS: ensure mandatory tool(s)
  git -h &> /dev/null
  if [[ $? -ne 0 ]]; then
    echo "ğŸš§ Please install dev tools first (that popped up)! Then rerun this script again!" && exit 0
  fi

  #######################################################################
  ### install Homebrew itself
  /opt/homebrew/bin/brew --version &> /dev/null
  if [[ $? -ne 0 ]]; then
    echo "ğŸº Installing Homebrew..." && sleep 2
    bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  fi

  eval "$(/opt/homebrew/bin/brew shellenv)"
  brew analytics off
fi

#######################################################################
### install Nix and necessary tools
type nix &> /dev/null
if [[ $? -ne 0 ]]; then
  echo "ğŸš§ Installing 'Nix'!" && sleep 2
  curl --proto '=https' --tlsv1.2 -sSf -L https://install.determinate.systems/nix | sh -s -- install

  # make Nix directly usable!
  . /nix/var/nix/profiles/default/etc/profile.d/nix-daemon.sh

  # install the first mandatory Nix packages before proceeding
  echo "ğŸš§ Installing 'git' and 'chezmoi' via Nix!" && sleep 2
  nix profile install nixpkgs#{git,chezmoi}
fi

#######################################################################
### apply dotfiles using chezmoi
chezmoi init -S ~/.dotfiles --apply n4tht4n

echo "ğŸ‘ We're done, please relog and enjoy your freshly installed system ğŸ˜ğŸš€"

